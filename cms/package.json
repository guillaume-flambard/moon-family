{
  "name": "moon-family-cms",
  "version": "1.0.0",
  "description": "Payload CMS for Moon Family websites",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=./src/payload.config.ts nodemon",
    "build": "cross-env PAYLOAD_CONFIG_PATH=./src/payload.config.ts payload build",
    "start": "cross-env PAYLOAD_CONFIG_PATH=./src/payload.config.ts NODE_ENV=production node dist/server.js",
    "generate:types": "payload generate:types",
    "generate:importmap": "payload generate:importmap"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "^1.0.0",
    "@payloadcms/richtext-slate": "^1.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "mongoose": "^8.0.0",
    "payload": "^2.11.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
